<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>


<% @person.phone_numbers.each do |phone| %>
<p>
  <strong>Number:</strong>
  <%= phone.number %>
  <%= link_to 'edit', edit_phone_number_path(phone) %> |
  <%= link_to 'delete', phone_number_path(phone), :method => "delete" %>
</p>
<% end %>

<p>
<strong>Email Addresses:</strong>
</p>
<ul>
  <% @person.email_addresses.each do |email| %>
    <li>
      <%= email.address %>
      <%= link_to 'edit',edit_email_address_path(email) %> |
      <%= link_to 'delete', email_address_path(email), :method => 'delete' %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add phone number',new_phone_number_path(contact_id: @person.id, contact_type: @person.class) %> |
<%= link_to 'Add email address',new_email_address_path(contact_id: @person.id, contact_type: @person.class), id: 'new_email_address'%>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
